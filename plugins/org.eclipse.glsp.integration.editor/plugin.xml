<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Diagram">
            <command
                  commandId="com.avl.mdml.glsp.diagram.export"
                  icon="icons/export.gif"
                  label="SVG Export"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   
    <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.avl.mdml"
            defaultHandler="org.eclipse.glsp.integration.editor.ExportDiagramHandler"
            description="Export this diagram to SVG"
            id="com.avl.mdml.glsp.diagram.export"
            name="Export Diagram">
      </command>
      <category
            id="com.avl.mdml"
            name="MDMl">
      </category>
    
   </extension>
</plugin>
